<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverLoginPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:text="Driver Login"
                android:layout_gravity="end"
                android:textColor="#ffffff"
                android:background="#C372DA" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"></Space>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:drawableRight="@drawable/mydriverphone"
                    android:paddingLeft="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp"></Space>

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/myhodpassword"
                    android:paddingLeft="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></Space>
                <CheckBox
                    android:id="@+id/showpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="Show Password"
                    android:textColor="#000000"></CheckBox>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"></Space>
            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:text="Login"
                android:layout_gravity="start"
                android:textColor="#ffffff"
                android:background="#C372DA" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"></Space>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:background="#C372DA">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password ?"
                    android:textAlignment="center"
                    android:paddingTop="15dp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>