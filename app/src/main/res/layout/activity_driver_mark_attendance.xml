<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverMarkAttendance">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button1"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_gravity="end"
                android:background="#C372DA"
                android:text="Todays Attendance"
                android:textColor="#ffffff" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp"></Space>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:lottie_rawRes="@raw/animationfour"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible">
            </com.airbnb.lottie.LottieAnimationView>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp"></Space>
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:paddingLeft="5dp"></CheckBox>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"></Space>
            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absent"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:paddingLeft="5dp"></CheckBox>

            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"></Space>

            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:background="#C372DA"
                android:text="Give Attendance"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>